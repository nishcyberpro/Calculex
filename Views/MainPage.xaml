<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculex.Views.MainPage">

    <Grid Padding="5,0"
          ColumnSpacing="1"
          RowSpacing="1">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1.1*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <VerticalStackLayout
                     Grid.Row="0"
                     Grid.ColumnSpan="4"
                     Padding="5.0">

            <Label Text="0"
                   x:Name="input"
                   Margin="0,5,0,5"
                   FontSize="45"
                   HorizontalTextAlignment="End"
                   />

            <Label
                Text="0"
                HorizontalTextAlignment="End"
                FontSize="30"
                Opacity="0.8"
                />
            
        </VerticalStackLayout>

        <Button Grid.Row="1"
                Grid.Column="0"
                Text="Variable"
                BackgroundColor="Orange"
                TextColor="Black"
                FontSize="15"
                >
        </Button>

        <Button Text="List"
                Grid.Row="1"
                Grid.Column="1"
                FontSize="20"
                BackgroundColor="Orange"
                TextColor="Black"
                />
        <Button Text="( )"
                Grid.Row="1"
                Grid.Column="2"
                FontSize="30"
                BackgroundColor="Gray"
                TextColor="Black"/>

        <Button Text="Hover"
                x:Name="btn"
                Grid.Row="1"
                Grid.Column="3"
                FontSize="15"
                >
            <Button.GestureRecognizers>
                <PointerGestureRecognizer PointerEntered="OnMouseEnter"
                                          PointerExited="OnMouseExit"/>
            </Button.GestureRecognizers>
        </Button>
    </Grid>

</ContentPage>
